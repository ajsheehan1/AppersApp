@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <div class="row">
        
        <div class="col-md-12"><center><img src="https://www.freelogodesign.org/file/app/client/thumb/165cb57b-894f-484a-94eb-200eae22d696_200x200.png?1599062759947" /></center></div>
    </div>

    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <h3>Welcome to APPers. Choose to order a drink or begin/finalize your tab.</h3>
        </div>
        <div class="col-md-2"></div>
    </div>

    <p>
        @if (TempData.ContainsKey("SaveResult"))
        {
            <div class="alert alert-success fade in" role="alert">

                <button type="button" class="close" data-dismiss="alert">
                    <span>&times;</span>
                </button>
                @TempData["SaveResult"]
            </div>
        }
    </p>
</div>

<div class="row">

    <div class="col-md-1"></div>
    <div class="col-md-4" id="clickhere">
        
            <h1>Feeling Thirsty?</h1>
            <i class="fas fa-beer fa-10x"></i>
            <p><input type="button" class="btn btn-primary btn-lg" value="Place Order!" onclick="location.href='@Url.Action("Create", "Menu")'" />
       
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-4" id="clickhere">
        <h1>Pay or View Tab</h1>
        <i class="far fa-credit-card fa-10x"></i>
        <p><input type="button" class="btn btn-primary btn-lg" value="Create/View Tab" onclick="location.href='@Url.Action("Index", "Tab")'" />
    </div>
    <div class="col-md-1"></div>


</div>