@model IEnumerable<APPers.Models.Menu.MenuListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Open Orders</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TabName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BeerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderComplete)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedUtc)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.OrderComplete == false)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TabName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BeerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderComplete)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedUtc)
                </td>
                <td>
                    <input type="button" class="btn btn-primary  btn-sm" value="Complete/Edit" onclick="location.href='@Url.Action("Edit", new { id = item.OrderId })'" />
                </td>
                <td>
                    <input type="button" class="btn btn-primary  btn-sm" value="Details" onclick="location.href='@Url.Action("Details", new { id = item.OrderId })'" />
                </td>
                <td>
                    <input type="button" class="btn btn-primary  btn-sm" value="Cancel" onclick="location.href='@Url.Action("Delete", new { id = item.OrderId })'" />
                </td>
            </tr>
        }
    }

</table>

<hr />
<hr />

